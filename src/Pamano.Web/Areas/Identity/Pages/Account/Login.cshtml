@page
@model LoginModel

@{
    ViewData["Title"] = "Inicio de Sesion";
}
<!-- Encabezado -->
<header class="fondo_tifblue">
    <div>
        <h1 class="fondo_tifblue titulo1">@ViewData["Title"]</h1>
    </div>
</header>


<div>
    <div class="Formulario">
        <section>
            <form id="account" method="post" class="form-registro">
                <h4 class="form-titulo">Iniciar Session</h4>
                <hr />
                <div asp-validation-summary="All" class="cont-input">

                    <label class="labelCorreo" asp-for="Input.Email">Correo Electronico</label>
                    <span asp-validation-for="Input.Email" class="badvertencia"></span>
                    <input asp-for="Input.Email" class="input" />


                    <label class="label" asp-for="Input.Password">Contraseña</label>
                    <span asp-validation-for="Input.Password" class=" advertencia"></span>
                    <input asp-for="Input.Password" class="input" />


                    <div class="checkbox fondo_azulcla">
                        <label class="labelRemember" asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>


                    <input type="submit" class="btn-regis" value="Iniciar">

                    <div class="div-fin fondo_azulcla">
                        <p class="fondo_azulcla">
                            <a id="forgot-password" class="fondo_azulcla form-link" asp-page="./ForgotPassword">¿Olvido su Contraseña?</a>
                        </p>
                        <p class="fondo_azulcla">
                            <a class="fondo_azulcla form-link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse como nuevo usuario</a>
                        </p>

                    </div>

                </div>

            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
