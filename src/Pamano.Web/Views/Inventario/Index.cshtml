@model IEnumerable<Pamano.Core.Domain.Inventario>

@{
    ViewData["Title"] = "Inventario";
    Layout = "~/Views/Shared/_navAdmin.cshtml";
}
@section list{
    <link href="//cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/css_admin/Lista_proveedores_ADMINISTRADOR.css" rel="stylesheet" />
}


<p>
    <a asp-action="Create">Actualizar inventario</a>
</p>
<table id="lista" class="table">
    <thead>
        <tr>
            <th>
                Fecha De Ingreso
            </th>
            <th>
                ID Orden De Compra
            </th>
            <th>
                ID Orden De Venta
            </th>
            <th>
                Realizador de la Venta
            </th>
            <th>
                ID Pedido
            </th>
            <th>
                Producto
            </th>
            <th>
                ID Usuario
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeIngreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdOrdenDeCompraNavigation.IdOrdenDeCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdOrdenDeVentaNavigation.IdOrdenDeVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdOrdenDeVentaNavigation.IdUsuarioNavigation.PrimerNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPedidoNavigation.IdUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProductoNavigation.IdProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.IdUsuario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdInventario">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdInventario">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdInventario">Eliminar</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<div class="btn_salida">
    <ul>
        <li><a asp-controller="Home" asp-action="CuentaAdmin">VOLVER</a></li>
    </ul>
</div>


@section datatable{ 
    <script>
        $(document).ready(function () {
            $('#lista').DataTable();
        });
    </script>
}