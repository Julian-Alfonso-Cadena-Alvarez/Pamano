@model Pamano.Core.Domain.OrdenDeCompra

@{
    ViewData["Title"] = "Crear orden";
    Layout = "~/Views/Shared/_navAdmin.cshtml";
}
@section create{
    <link href="~/css_admin/registrar_proveedor_ADMINISTRADOR.css" rel="stylesheet" />

}
<div class="Formulario">

    <form asp-action="Create" id="formulario" onsubmit="return validacion()" class="form-registro">
        <h2 class="form-titulo">Crear Orden de Compra</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="cont-input">
            <label asp-for="CantidadProducto" class="input-100"></label>
            <input asp-for="CantidadProducto" class="input-100" />
            <span asp-validation-for="CantidadProducto" class="text-danger"></span>

            <label asp-for="IdProductoNavigation" class="control-label">Producto</label>
            <select asp-for="IdProductoNavigation.CaracteristicasDelProducto" class="form-control" asp-items="ViewBag.CaracteristicasDelProducto"></select>


            <label asp-for="NombreDelProveedor" class="input-100">Nombre del Proveedor</label>
            <input asp-for="NombreDelProveedor" class="input-100" />
            <span asp-validation-for="NombreDelProveedor" class="text-danger"></span>

            <input type="submit" value="Crear" class="btn-regis btn-enviar">
            <p class="form-link"><a class="form-link" asp-controller="Home" asp-action="CuentaAdmin">VOLVER</a></p>
            <p class="form-link"><a class="form-link" asp-area="Identity" asp-page="/Account/Manage/Index" >VOLVER</a></p>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts{ 
    <script src="~/js/ValidacionFormularioUsu.js"></script>
} 
