@model IEnumerable<Pamano.Core.Domain.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CantidadDeProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioDelProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CaracteristicasDelProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoDeProductoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadDeProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioDelProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaracteristicasDelProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoDeProductoNavigation.IdTipoProducto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProducto">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdProducto">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProducto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
